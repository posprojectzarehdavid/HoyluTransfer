<Window x:Class="HoyluReceiver.ProgressDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HoyluReceiver"
        mc:Ignorable="d"
        Title="ProgressDialog" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <ProgressBar Minimum="0" Maximum="100" Name="pbStatus" IsIndeterminate="true" Margin="30,65,30,35"/>
        <Label x:Name="label" Content="Gerät wird am Server registriert" HorizontalAlignment="Left" Margin="30,34,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
